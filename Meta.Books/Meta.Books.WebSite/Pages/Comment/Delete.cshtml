@page "{id:int}"
@model Meta.Books.WebSite.Pages.Comment.Delete

<div class="container">
    <h2>Delete Comment</h2>
    <hr />

    <form method="post">
        <input type="hidden" asp-for="CommentDto.id" />
        
        <div class="form-group">
            <label>Book</label>
            <input readonly class="form-control" value="@Model.BookTitle" />
        </div>

        <div class="form-group">
            <label>User</label>
            <input readonly class="form-control" value="@Model.UserName" />
        </div>

        <div class="form-group">
            <label asp-for="CommentDto.comment">Comment</label>
            <textarea readonly asp-for="CommentDto.comment" class="form-control"></textarea>
        </div>

        @if (Model.Errors.Count > 0)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in Model.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }

        <div class="text-right">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>