@page "{id:int}"
@model Meta.Books.WebSite.Pages.Author.Adm

<div class="container">
    <h1>@(Model.AuthorDto.id > 0 ? "Edit Author" : "Add New Author")</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="AuthorDto.id"/>
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="AuthorDto.name" class="control-label">Name</label>
                    <input asp-for="AuthorDto.name" class="form-control"/>
                    <span asp-validation-for="AuthorDto.name" class="text-danger"></span>
                </div>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary">@(Model.AuthorDto.id > 0 ? "Update" : "Save")</button>
                    <a asp-page="./List" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>