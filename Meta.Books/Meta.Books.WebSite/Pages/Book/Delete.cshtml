@page "{id:int}"
@model Meta.Books.WebSite.Pages.Book.Delete

<div class="container">
    <h2>Delete Book</h2>
    <hr />

    <form method="post">
        <input type="hidden" asp-for="BookDto.id" />
        <div class="form-group">
            <label asp-for="BookDto.title">Title</label>
            <input readonly asp-for="BookDto.title" class="form-control" maxlength="45" />
        </div>

        <div class="form-group">
            <label>Author</label>
            <input readonly class="form-control" value="@Model.AuthorName" />
        </div>

        <div class="form-group">
            <label>Category</label>
            <input readonly class="form-control" value="@Model.CategoryName" />
        </div>

        <div class="form-group">
            <label>Publisher</label>
            <input readonly class="form-control" value="@Model.PublisherName" />
        </div>

        @if (Model.Errors.Count > 0)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in Model.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }

        <div class="text-right">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>