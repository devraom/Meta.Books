@page "{id:int}"
@model Meta.Books.WebSite.Pages.Book.Adm

<div class="container">
    <h1>@(Model.BookDto.id > 0 ? "Edit Book" : "Add New Book")</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="BookDto.id"/>
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="BookDto.title" class="control-label">Title</label>
                    <input asp-for="BookDto.title" class="form-control"/>
                    <span asp-validation-for="BookDto.title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BookDto.author_id" class="control-label">Author</label>
                    <select asp-for="BookDto.author_id" class="form-control">
                        <option value="">Select an author</option>
                        @foreach (var author in Model.Authors)
                        {
                            <option value="@author.id">@author.name</option>
                        }
                    </select>
                    <span asp-validation-for="BookDto.author_id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BookDto.category_id" class="control-label">Category</label>
                    <select asp-for="BookDto.category_id" class="form-control">
                        <option value="">Select a category</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.id">@category.name</option>
                        }
                    </select>
                    <span asp-validation-for="BookDto.category_id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BookDto.publisher_id" class="control-label">Publisher</label>
                    <select asp-for="BookDto.publisher_id" class="form-control">
                        <option value="">Select a publisher</option>
                        @foreach (var publisher in Model.Publishers)
                        {
                            <option value="@publisher.id">@publisher.name</option>
                        }
                    </select>
                    <span asp-validation-for="BookDto.publisher_id" class="text-danger"></span>
                </div>

                @if (Model.Errors.Count > 0)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }

                <div class="text-right">
                    <button type="submit" class="btn btn-primary">@(Model.BookDto.id > 0 ? "Update" : "Save")</button>
                    <a asp-page="./List" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>