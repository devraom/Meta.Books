@page "{id:int}"
@model Meta.Books.WebSite.Pages.Publisher.Adm

<div class="container">
    <h1>@(Model.PublisherDto.id > 0 ? "Edit Publisher" : "Add New Publisher")</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="PublisherDto.id"/>
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PublisherDto.name" class="control-label">Name</label>
                    <input asp-for="PublisherDto.name" class="form-control"/>
                    <span asp-validation-for="PublisherDto.name" class="text-danger"></span>
                </div>

                @if (Model.Errors.Count > 0)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }

                <div class="text-right">
                    <button type="submit" class="btn btn-primary">@(Model.PublisherDto.id > 0 ? "Update" : "Save")</button>
                    <a asp-page="./List" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>